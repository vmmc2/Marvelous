<%- include("../includes/header.ejs") %>
</head>

<body>
    <%- include("../includes/navbar.ejs") %>

    <main>
        <h1> Sign Up </h1>

        <% if(flashErrorMessages){ %>
            <% flashErrorMessages.forEach(flashErrorMessage => { %>
                <p> <%= flashErrorMessage %> </p>
            <% }); %>
        <% } %>

        <% if(validationErrors.length > 0){ %>
            <% validationErrors.forEach(validationError => { %>
                <p> <%= validationError.msg %> </p>
            <% }) %>
        <% } %>

        <form action="/signup" method="POST" novalidate>
            <label for="fullName"> Full Name </label>
            <input id="fullName" name="fullName" type="text" value="<%= userData.fullName %>">

            <label for="username"> Username </label>
            <input id="username" name="username" type="text" value="<%= userData.username %>">

            <label for="email"> Email </label>
            <input id="email" name="email" type="email" value="<%= userData.email %>">

            <label for="password"> Password </label>
            <input id="password" name="password" type="password" value="<%= userData.password %>">

            <label for="confirmPassword"> Confirm Password </label>
            <input id="confirmPassword" name="confirmPassword" type="password" value="<%= userData.confirmPassword %>">

            <input name="_csrf" type="hidden" value="<%= csrfToken %>">
            <button type="submit"> Sign Up! </button>
        </form>

    </main>

    <%- include("../includes/footer.ejs") %>